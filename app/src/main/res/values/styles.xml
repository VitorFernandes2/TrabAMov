<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextView" parent="TextAppearance.AppCompat">

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">40sp</item>

    </style>

    <style name="WhiteTextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:width">300sp</item>
    </style>

    <style name="WhiteTextButtonLand" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CameraWhiteTextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:width">100sp</item>
    </style>

    <style name="RedTextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">#C93838</item>
        <item name="android:width">300sp</item>
    </style>

    <style name="RedTextButtonLand" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">#C93838</item>
    </style>

</resources>
