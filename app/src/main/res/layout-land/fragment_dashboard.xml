                <TextView
                    android:id="@+id/resultname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="26dp"
                    android:text="obteve em 10s"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/textView202"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1sp"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView202" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pos3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView163"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/statistics_op"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView173"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="68dp"
                    android:text="@string/statistics_type"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
