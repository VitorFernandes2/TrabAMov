                <TextView
                    android:id="@+id/resultname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="26dp"
                    android:text="obteve em 10s"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/textView203"
                    app:layout_constraintTop_toBottomOf="@+id/textView163" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1sp"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView203" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>